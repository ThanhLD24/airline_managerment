/* CSS Document */

.MainColumn {background:#055199; float: left; border-radius:5px; padding:25px 30px; width:460px; margin-top:15px; margin-bottom:10px}
.MainColumn h2 {color:#fff; font-size:25px; font-weight:bold; text-transform:uppercase;  text-shadow:1px 1px #033c7e; line-height:25px; }
.contentSearchBox {padding:10px 0px; margin:15px 0px; border-top: dotted 1px #1265b4;border-bottom: dotted 1px #1265b4; color:#bbdeff; font-size:13px; line-height:20px;}
.contentSearchBox input{background:#e4f4ff; border: solid 1px #0d589f; border-radius:5px; height:28px; line-height:28px; margin-top:6px; margin-bottom:10px; color:#143a83; }
.contentSearchBox input.PlaceText {width:205px; padding-left:5px; padding-right:5px}
select {
    padding:4px;
    margin: 5px 0px;
    -webkit-border-radius:4px;
    -moz-border-radius:4px;
    border-radius:4px;    
    background: #e4f4ff;
    color:#143a83;
    border:none;
    outline:none;
    display: inline-block;
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
    cursor:pointer;	
	 border: solid 1px #0d589f;
}
option {background:#fff; border:none}
.xemlicham {color:#9abf26; font-weight:bold; font-size:13px; background:url(../../Images/Newversion/Date.png) no-repeat center left;padding:3px 0px; padding-left:20px; text-decoration:none; line-height:20px; }
.xemlicham:hover {color:#fcc124;}
/* Targetting Webkit browsers only. FF will show the dropdown arrow with so much padding. */
@media screen and (-webkit-min-device-pixel-ratio:0) {
    select {padding-right:18px; }
}

label {position:relative; }
label:after {
    content:'<>';
    font:11px "Consolas";
    color:#143a83;
    -webkit-transform:rotate(90deg);
    -moz-transform:rotate(90deg);
    -ms-transform:rotate(90deg);
    transform:rotate(90deg);
    right:10px; top:1px;
    padding:2px 2px 10px 5px;
    border-bottom:1px solid #e4f4ff;
    position:absolute;
    pointer-events:none;
	background:#e4f4ff;
	margin-top:-8px;
}
label:before {
    content:'';
    right:6px; top:0px;
    width:20px; height:20px;
    background:#e4f4ff;
    position:absolute;
    pointer-events:none;
    display:block;
}

select.date {width:60px;}
select.month {width:140px;}
select.Per {width:100px;}
.inputBtn {display:table-column;}
.searchBtn {padding:8px 60px;
font-size:25px; font-weight:bold;
font-family:Arial, Helvetica, sans-serif; color:#654a05;
text-shadow: 1px 1px #fedd99;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background:#f4a411 url(../../Images/Newversion/BtnBg.jpg) repeat-x;
	border:solid 1px #febf7d;text-transform: uppercase;
}


