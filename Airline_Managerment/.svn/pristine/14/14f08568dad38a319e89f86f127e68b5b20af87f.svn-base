/*---------------------------------------

	TYPE STUFF

-----------------------------------------*/





#strengths li { background: url(../img/strength.png) 0 4px no-repeat; }
#weaknesses li { background: url(../img/weakness.png) 0 4px no-repeat; }


pre { display: block; font-size: 1.2em; color: #17516E;font-family: "Courier", "Courier New"; background: #90BCD4; padding: 12px; margin-bottom: 22px; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; }

#dload { margin: 0 auto 20px auto; display: block; width: 210px; height: 50px; text-indent: -9999px; }
#dload:link, #dload:visited { background: url(../img/dlb.png) 0 0; }
#dload:hover, #dload:active { background: url(../img/dlb.png) 0 -50px; }
/*---------------------------------------

	LEAN MODAL

-----------------------------------------*/

#lean_overlay {
    position: fixed;
    z-index: 10000;
    top: 0px;
    left: 0px;
    height:100%;
    width:100%;
    background: #000;
    display: none;
}


/*---------------------------------------

	EXAMPLES

-----------------------------------------*/

#signup {width: 710px;padding-bottom:12px;display:none;
background:#fff url(../popup/Images/bgpopup.png) no-repeat bottom left;
        border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px;
        box-shadow: 0px 0px 4px rgba(0,0,0,0.7); -webkit-box-shadow: 0 0 4px rgba(0,0,0,0.7); -moz-box-shadow: 0 0px 4px rgba(0,0,0,0.7);
}


#signup-header { background:#0760b4 ; padding: 15px 15px 10px 15px; border-bottom: 1px solid #e4e8ea; border-top-left-radius: 5px; -moz-border-radius-topleft: 5px; -webkit-border-top-left-radius: 5px; border-top-right-radius: 5px; -moz-border-radius-topright: 5px; -webkit-border-top-right-radius: 5px; }

#signup-header  h2 {  font-size: 26px; font-weight: 700; margin-bottom: 3px; text-shadow: 1px 1px 0 #032648;  color:#fff; text-transform:uppercase; line-height:35px; text-align:center}
#signup-header  p { color: #444; font-size: 1.3em; margin: 0; text-shadow: none; }

#signup .error-message{ color: red;}
#signup  .mainForm .left_Xemdonhang {float:left; border-radius:5px; background:#f9f9f9; border: solid 1px #a1a1a1; margin-right:15px; padding:10px; font-size:12px; color:#333;margin-top: 10px;width: 265px;}
#signup .mainForm table{ width: 100%;}
#signup  .mainForm .left_Xemdonhang .madonhang_onpopup {border: solid 1px #a1a1a1; border-radius:5px; width:250px; padding:5px;}
#signup  .mainForm td {padding-bottom:5px}
#signup  .mainForm tr.item td {padding-bottom:15px}
#signup  .mainForm td p{ margin-bottom: 5px;font-weight: bold;}
#signup  .mainForm .left_Xemdonhang .btn_xemmadonhang_onPopup {background:#f7a81f; color:#fff; text-shadow: 1px 1px #b27916; font-size:15px; font-weight:bold; padding:8px 5px; border:none; border-radius:5px; width:190px; text-align:center}
#signup  .mainForm .Right_Xemdonhang  {float:left;width: 360px;margin-top: 10px;}
#signup  .mainForm .Right_Xemdonhang  p{font-size:12px; margin-bottom:0}
#signup  .mainForm { margin:20px;}
#signup  .mainForm p {font-size:14px;font-weight:normal; color:#444; line-height:22px; display:block;  margin-bottom:10px}
.modal_close { position: absolute; top: -22px; right: -22px; display: block; width: 45px; height: 45px; background: url(../Images/Xemlaidonhang/closeBtn.png) no-repeat; z-index: 2; }
