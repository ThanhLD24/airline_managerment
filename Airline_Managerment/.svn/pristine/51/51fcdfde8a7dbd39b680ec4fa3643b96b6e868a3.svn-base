/* CSS Document */
.titBox {
	background: url(../Images/Newversion/BgChieu_06.jpg) repeat-x;
	display: inline-block;
	padding: 5px 25px;
	line-height: 25px;
	color: #fff;
	border-radius: 5px 5px 0px 0px;
	font-weight: bold;
	margin-top: 15px
}

.boxThongtinHK {
	border: solid 1px #d9d9d9;
	color: #333;
}

.boxThongtinHK td {
	font-size: 12px;
	padding: 3px 5px
}

.boxThongtinHK td .blue {
	color: #143a83;
	font-weight: bold
}

.boxThongtinHK td p.Tongia {
	font-size: 18px;
	color: #143a83;
	line-height: 25px;
	text-transform: uppercase;
	font-weight: bold
}

.boxThongtinHK td  .RedGia {
	font-size: 22px;
	color: #d51317;
	line-height: 28px;
	text-transform: uppercase;
	font-weight: bold
}

.bigFont {
	font-size: 15px;
	color: #143a83;
	font-weight: bold;
	line-height: 20px
}

.boldFont {
	font-weight: bold;
	font-size: 14px;
	color: #333;
}

.boxThongtinHK td b {
	font-weight: bold
}

.boxThongtinHK .ttChuyenbay {
	background: url(../Images/Newversion/bg_tthanhkhach_06.jpg) repeat-x;
	width: 100%;
	margin-top: 1px
}

.boxThongtinHK .ttChuyenbay tr.border {
	border-bottom: dotted 1px #d9d9d9;
}

.boxThongtinHK .ttChuyenbay tr.border td {
	height: 35px;
	line-height: 35px
}

.boxThongtinHK .ttChuyenbay tr td {
	height: 26px;
	line-height: 26px
}

.boxThongtinHK .ttChuyenbay tr.noneborder {
	border-bottom: none;
}

.boxThongtinHK .ttChuyenbay tr.noneborder td {
	height: 26px;
	line-height: 26px
}

.padding {
	padding: 10px 15px
}

.tthl {
	margin-bottom: 5px
}

.tthl td {
	height: 26px;
	line-height: 26px
}

.boxThongtinHK input, select {
	height: 25px;
	line-height: 25px;
	border: solid 1px #d9d9d9;
	color: #333
}

.Tenkhachbay {
	width: 250px
}

.line2 {
	height: 1px;
	border-bottom: solid 1px #d9d9d9
}

.uppercase {
	text-transform: uppercase;
}

.n {
	line-height: 20px;
	margin-left: 15px
}

.red {
	color: #d51317
}

.quocgia {
	width: 250px
}

.ttt {
	color: #999;
	line-height: 18px;
	font-weight: bold
}

.Tttnhap {
	width: 310px
}

.boxThongtinHK .ycXuathoadon input {
	border: none;
	float: left;
	margin-right: 5px
}

.boxThongtinHK label.yctxt {
	line-height: 30px
}

.ycDacbiet {
	float: left;
	width: 450px
}

.ycDacbiet textarea {
	width: 410px;
	height: 100px;
	margin: 15px;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 12px;
	color: #333;
}

.tieptuc {
	width: 128px;
	height: 44px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	background: url(../Images/Newversion/bgMenu_header_05.jpg) repeat-x;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 18px;
	color: #fff;
	font-weight: bold;
	border: none;
	border-radius: 5px;
	padding-bottom: 5px;
	float: right;
	margin-top: 50px
}

.change-planes p.transfer {
	background: #fef4eb;
	border: solid 1px #fcdabf;
	line-height: 28px;
	border-right: none;
	border-left: none;
	margin: 0px -5px
}

.MainContent {
	border-right: none !important;
	width: 670px;
	padding-right: 0;
}

.txtHoadon {
	width: 180px
}

.txtHoadonDCnhanhoadon {
	width: 100%
}

#invoice_details fieldset {
	display: block;
	-webkit-margin-start: 2px;
	-webkit-margin-end: 2px;
	-webkit-padding-before: 0.35em;
	-webkit-padding-start: 0.75em;
	-webkit-padding-end: 0.75em;
	-webkit-padding-after: 0.625em;
	border: solid 1px #d7d7d7;
	border-image-source: initial;
	border-image-slice: initial;
	border-image-width: initial;
	border-image-outset: initial;
	border-image-repeat: initial;
	min-width: -webkit-min-content;
	padding: 5px
}

#invoice_details legend {
	font-weight: bold;
}